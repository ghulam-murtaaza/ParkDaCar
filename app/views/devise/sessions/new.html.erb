<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6 border border-dark mt-5">
      <h3 class="mt-5">Log In</h3>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <br /><%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: 'Email' %>
        </div>

        <div class="field">
          <br /><%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: 'Password' %>
        </div>

        <div class="actions">
          <br /><%= f.submit "Log in", class: "btn btn-dark" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
      <div class="col-md-3 mt-5"></div>
    </div>
  </div>
</div>
